<table data-page-size="100">
  <thead>
    <tr>
      <th>{{view.title}}</th>
      <th data-hide="phone">{{view.deadline}}</th>
      <th data-hide="all">{{view.description}}</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each jobs}}
      <tr>
        <td>{{title}}</td>
        <td>{{dateDeadline.[0]}}</td>
        <td>{{description}}</td>
        <td><a class="btn btn-primary btn-line" target="_blank" href="{{link}}">{{../view.readmore}}</a></td>
      </tr>
      {{/each}}
  </tbody>
</table>
